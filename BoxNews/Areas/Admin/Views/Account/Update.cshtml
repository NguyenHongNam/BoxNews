@model BoxNews.Models.AccountViewModel.UpdateAccountViewModel;
@{
    ViewData["Title"] = "UpdateAccount";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="col-md-12">
    <div class="tile">
        <div class="tile-body">
            <div class="row element-button">
                <h2>Sửa thông tin tài khoản</h2>
            </div>
            <form method="post" asp-area="Admin" asp-controller="Account" asp-action="Update">
                <div class="mb-3">
                    <label for="" class="form-label">AccountID</label>
                    <input type="text" class="form-control" asp-for="AccountID" readonly>
                </div>
                <div class="mb-3">
                    <label for="" class="form-label">Username</label>
                    <input type="text" class="form-control" asp-for="UserName">
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label for="" class="form-label">Password</label>
                    <input type="text" class="form-control" asp-for="UserPassword">
                    <span asp-validation-for="UserPassword" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label for="" class="form-label">Fullname</label>
                    <input type="text" class="form-control" asp-for="FullName">
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label for="" class="form-label">Email</label>
                    <input type="text" class="form-control" asp-for="Email">
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label for="" class="form-label">Role</label>
                    <input type="text" class="form-control" asp-for="RoleName">
                    <span asp-validation-for="RoleName" class="text-danger"></span>
                </div>
                <br>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>
</div>
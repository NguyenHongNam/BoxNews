@model List<BoxNews.Models.Domain.Account>
@{
    ViewData["Title"] = "Account";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="col-md-12">
    <div class="tile">
        <h2>Quản lý tài khoản</h2>
        <div class="tile-body">
            <div class="row element-button">
                <div class="col-sm-2">
                    <a class="btn btn-add btn-sm" asp-area="Admin" asp-controller="Account" asp-action="Add" title="Thêm">
                        <i class="fas fa-plus"></i>
                        Tạo mới tài khoản
                    </a>
                </div>
            </div>
            <table class="table table-hover table-bordered" id="sampleTable">
                <thead>
                    <tr>
                        <th>Họ và tên</th>
                        <th>Tên tài khoản</th>
                        <th>Mật khẩu</th>
                        <th>Email</th>
                        <th>Quyền</th>
                        <th>chức năng</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var acc in Model)
                    {
                        <tr>
                            <td>@acc.FullName</td>
                            <td>@acc.UserName</td>
                            <td>@acc.UserPassword</td>
                            <td>@acc.Email</td>
                            <td>@acc.Roles.RoleName</td>
                            <td>
                                <a class="btn btn-primary btn-sm edit" asp-area="Admin" asp-controller="Account" asp-action="Update" asp-route-id="@acc.AccountID" title="Sửa">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a class="btn btn-primary btn-sm trash" asp-area="Admin" asp-controller="Account" asp-action="Delete" asp-route-id="@acc.AccountID" title="Xóa">
                                    <i class="fas fa-trash-alt"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


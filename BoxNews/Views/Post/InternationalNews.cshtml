@model List<BoxNews.Models.Domain.Post>

<section id="internationalNews" class="news-section">
    <div class="container">
        <h1 class="section-title">Tin quốc tế</h1>
        <div class="row">
            @foreach (var post in Model.OrderByDescending(p => p.CreatedAt))
            {
                <div class="col-md-6">
                    <div class="media post-item wow fadeInDown">
                        <a href="~/Post/Detail?id=@post.PostID" class="media-left">
                            <img src="~/images/@post.ImgSrc" alt="Post Image">
                        </a>
                        <div class="media-body">
                            <a href="~/Post/Detail?id=@post.PostID" class="post-title">@post.Title</a>
                        </div>
                    </div>
                </div>
            }
        </div>
        <div class="text-center">
            <a href="#" class="btn btn-primary">Xem thêm</a>
        </div>
    </div>
</section>

<style>
    /* style.css */

    /* Thiết lập font chữ chung */
    body {
        font-family: Arial, sans-serif;
    }

    /* Style cho phần tiêu đề của trang */
    .section-title {
        text-align: center;
        margin-bottom: 30px;
        font-size: 28px;
        font-weight: bold;
        color: #333;
    }

    /* Style cho phần bài viết */
    .post-item {
        margin-bottom: 20px;
        border-bottom: 1px solid #ddd;
        padding-bottom: 20px;
    }

        .post-item:last-child {
            border-bottom: none;
        }

        .post-item img {
            max-width: 100%;
            width: 100%;
            height: auto;
            display: block;
            margin: 0 auto;
        }

    .post-title {
        font-size: 20px;
        font-weight: bold;
        color: #333;
        text-decoration: none;
    }

    .post-description {
        color: #666;
    }

    /* Style cho nút "Xem thêm" */
    .btn-primary {
        display: inline-block;
        padding: 10px 20px;
        background-color: #007bff;
        color: #fff;
        border: none;
        border-radius: 4px;
        text-decoration: none;
    }

        .btn-primary:hover {
            background-color: #0056b3;
            cursor: pointer;
        }

</style>
